<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Liste des abonnements :</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Abonnement" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Créer un abonnement
            </a>
        </div>
    </div>
    <br /> <br />

<table id="tblData" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Nom
            </th>
            <th>
                Description
            </th>
            <th>
                Durée
            </th>
            <th>
                Prix
            </th>
            <th></th>
        </tr>
    </thead> 
</table>
</div>

@section Scripts{
    <script src="~/js/abonnement.js"></script>
}
