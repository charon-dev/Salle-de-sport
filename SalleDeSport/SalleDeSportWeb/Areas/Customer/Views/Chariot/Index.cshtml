@model SalleDeSport.Models.ViewModels.ChariotVM
<form method="post">
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class="row">
					<div class="col-6  pt-2">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						Panier
					</div>
					<div class="col-6 text-end">
						<a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-info btn-sm">Retour</a>
					</div>
				</div>
			</div>

			<div class="card-body">		
				@foreach (var item in Model.Chariots)
				{
				<div class="row">

					<div class="col-12 col-lg-6 pt-md-3">
						<h5><strong>Abonnement @item.Abonnement.Nom </strong></h5>
					</div>
					<div class="col-12  col-lg-5 text-center row">
						<div class="col-10 text-md-right pt-4">
							<h6><strong> @item.Prix DH<span class="text-muted">&nbsp;x&nbsp;</span> 1 </strong></h6>
						</div>
						
						<div class="col-2 text-right pt-2">
							<a asp-action="SuppChariot" asp-route-ChariotId="@item.Id" class="btn btn-danger">
									<i class="bi bi-trash-fill"></i>
								</a>
						</div>
					</div>
				</div>
				<hr />
				}
				<div class="row">
					<div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
						<ul class="list-group">
							<li class="list-group-item d-flex justify-content-between bg-light">
								<span class="text-info"> Total (DH)</span>
								<strong class="text-info">@Model.Commande.PrixTotal DH</strong>
							</li>
						</ul>
					</div>
				</div>

			</div>

			<div class="card-footer">
				<div class="card-footer row">
					<div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
						<a asp-action="ConfirmationPayement" class="btn btn-success form-control">Confirmation de payement</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
