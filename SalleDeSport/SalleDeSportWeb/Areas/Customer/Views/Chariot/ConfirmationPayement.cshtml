@model SalleDeSport.Models.ViewModels.ChariotVM
@using Microsoft.Extensions.Options
@inject IOptions<SalleDeSport.Utility.StripeSettings> Stripe

<form method="post">
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class=" row container">
					<div class="col-6">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						Récapitulatif d'achat
					</div>
					<div class="col-6 text-end">
						<a asp-action="Index" class="btn btn-outline-info btn-sm">Retour</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-info">Vos informations:</span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Nom</label>
								</div>
								<div class="col-9">
									<input asp-for="Commande.Nom"  class="form-control" />
									<span asp-validation-for="Commande.Nom" class="text-danger"></span>
								</div>
							</div>
							@*<div class="row my-1">
								<div class="col-3">
									<label>Phone Number</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.PhoneNumber" class="form-control" />
									<span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
								</div>
							</div>*@
							<div class="row my-1">
								<div class="col-3">
									<label>Prénom</label>
								</div>
								<div class="col-9">
									<input asp-for="Commande.Prenom" class="form-control" />
									<span asp-validation-for="Commande.Prenom" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Nationalité</label>
								</div>
								<div class="col-9">
									<input asp-for="Commande.Nationalite" class="form-control" />
									<span asp-validation-for="Commande.Nationalite" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>CIN</label>
								</div>
								<div class="col-9">
									<input asp-for="Commande.CIN" class="form-control" />
									<span asp-validation-for="Commande.CIN" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-info">Récapitulatif d'achat:</span>
							</h4>
							
							<ul class="list-group mb-3">
							@foreach (var details in Model.Chariots)
							{
								<li class="list-group-item d-flex justify-content-between">
									<div>
										<h6 class="my-0">@details.Abonnement.Nom</h6>
										<small class="text-muted">Quantité: 1</small>
									</div>
									<span class="text-muted">@((details.Prix*1)) DH</span>
								</li>
							}
								<li class="list-group-item d-flex justify-content-between bg-light">
									<small class="text-info">Total (Euro)</small>
									<strong class="text-info">@Model.Commande.PrixTotal DH</strong>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					
					<div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
						<button type="submit" value="Acheter" class="btn btn-primary form-control">Acheter</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
